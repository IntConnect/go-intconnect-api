@startuml
title Activity Diagram – Menambah Data Pada Fitur Role & User

'================================================
' STYLING
'================================================
skinparam backgroundColor #FAFAFA
skinparam DefaultFontName "Times New Roman"
skinparam defaultFontSize 14

skinparam Padding 3
skinparam PartitionHeaderFontStyle bold

skinparam ArrowColor #2E2E2E
skinparam ArrowThickness 2

skinparam ActivityBackgroundColor #FFFFFF
skinparam ActivityBorderColor #7A7A7A

skinparam StartColor #4CAF50
skinparam EndColor #E53935

skinparam DiamondBackgroundColor #FFF7CC
skinparam DiamondBorderColor #C5A600

!define ROLES Administrator
!define SYSTEM #AntiqueWhite|System

'================================================
' PAGE 1 – ACCESS & MENU
'================================================
|ROLES|
start
:Login;
:Sorot Menu\nUser Management;
:Pilih Role & User;
:Pilih Aksi;

if (Membuat Data\nUser?) then (Ya)
:Tekan Tombol \n New User;
|SYSTEM|
:Menampilkan Drawer\nFormulir Tambah Data;
|ROLES|
:Mengisi Field;
elseif (Membuat Data\nRole)  then (Ya)
:Tekan Tombol \n Add New Role;
|SYSTEM|
:Menampilkan Dialog\nFormulir Tambah Data;
|ROLES|
:Mengisi Field;
:Memilih Permission\nyang Diberikan;
else (No)
|ROLES|
end
endif

|SYSTEM|
|ROLES|
repeat
:Submit Data;

|SYSTEM|
  :Validasi Data;
  backward:Menampilkan\nPesan Error;
repeat while (Valid?)


'================================================
' PAGE 3 – SAVE & RESULT
'================================================
|SYSTEM|
:Simpan Data;
:Menampilkan Pesan Sukses;

if (Membuat Data\nUser?) then (Ya)
:Menutup Drawer;
elseif (Membuat Data\nRole)  then (Ya)
:Menutup Dialog;
else (No)
|SYSTEM|
end
endif
stop
@enduml
